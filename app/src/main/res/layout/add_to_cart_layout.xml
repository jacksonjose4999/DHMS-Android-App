<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:minHeight="150dp"
        android:orientation="vertical"
            android:background="@drawable/rect_oval"
android:paddingRight="30dp"
        android:paddingBottom="30dp"
            android:paddingLeft="30dp">

    <TextView
            android:id="@+id/name_item_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textAlignment="viewStart"
            android:textColor="#000"
            android:text="Veg Lunch" />

    <TextView
            android:id="@+id/description_item_add_to_cart"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="TextView" />
<LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <Button
            android:layout_width="40dp"
            android:layout_gravity="start"
            android:id="@+id/minus_add"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="-"
            android:textSize="20dp" />

    <TextView
            android:id="@+id/item_count_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/plus_add"
            android:background="@android:color/transparent"

            android:text="+" />

    <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/price_item_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="right|center_vertical|end"
            android:paddingRight="10dp"
            android:text="Rs.54"
            android:textColor="#31AF3D"
            android:textAlignment="textEnd" />
</LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:id="@+id/add_to_cart_button"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:background="@drawable/add_to_cart_layout_border"
            android:padding="10dp"
            android:text="Add"
            />
    </LinearLayout>
