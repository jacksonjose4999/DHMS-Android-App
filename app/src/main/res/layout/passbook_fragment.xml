<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:screenOrientation="portrait"
        android:background="#C1F7FAF7"
        android:orientation="vertical">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_gravity="left"
            android:background="#E6E6E6"
            android:textColor="#000"
            android:layout_weight="1"
            android:textStyle="normal"
            android:layout_height="51dp"
            android:gravity="center"
            android:text="                 Passbook"
            android:textSize="20sp"
             />
    <Button
        android:id="@+id/sign_out" android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:height="51dp"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"            android:textColor="#C41717"
            android:background="#E6E6E6"
        android:text="@string/sign_out" />
</LinearLayout>

    <TextView
            android:id="@+id/passbook_name_display"
            android:layout_width="match_parent"
            android:paddingTop="30dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingBottom="20dp"
            android:background="#F7F7F7"
            android:text="Hello!"
            android:textColor="#6D6D6D"
            android:fontFamily="sans-serif-light"
            android:textSize="25sp"
            android:textStyle="normal" />


<LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/toplabelborder"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/passbook_rollnumber_display"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:foregroundGravity="left|center_horizontal"
            android:gravity="left"
            android:text="Roll Number  " />
    <TextView
            android:id="@+id/roll_number_passbook"
            android:padding="10dp"
            android:textColor="#23c35a"
            android:layout_width="wrap_content"
            android:text="17101xxxxx"
            android:layout_gravity="right"
            android:layout_height="match_parent"/>
</LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/toplabelborder"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/available_balance_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:foregroundGravity="left|center_horizontal"
                android:gravity="left"
                android:text="Available Balance" />
        <TextView
                android:id="@+id/passbook_available_balance"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:textColor="#23c35a"

                android:text="2300"
                android:layout_gravity="right"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/toplabelborder"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/days_remaining_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:foregroundGravity="left|center_horizontal"
                android:gravity="left"
                android:text="Days Remaining" />
        <TextView
                android:id="@+id/passbook_days_remaining"
                android:padding="10dp"
                android:textColor="#23c35a"

                android:layout_width="wrap_content"
                android:text="21"
                android:layout_gravity="right"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:padding="10dp"
            android:text="History"
            android:gravity="bottom"
             />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_passbook_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>